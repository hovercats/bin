#!/bin/rc
# A simple script to change screen brightness.

flag e +

file=/sys/class/backlight/amdgpu_bl0/brightness
tmpfile=/tmp/bri.tmp

switch($1) {
	case d
		 awk <$file '{ print $1 - 5 }' >$tmpfile
		 cat $tmpfile >$file
	case i
		 awk <$file '{ print $1 + 5 }' >$tmpfile
		 cat $tmpfile >$file
}
