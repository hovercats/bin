#!/bin/rc

# Simple script to download videos
# Requires yt-dlp

flag e +

DLDIR=$HOME/usr/vid
proxy='&local=true'

if (test -z $1){
	printf 'No url found\n'
	exit 1
}

val=`{yt-dlp -F $1 | grep '1080p' | tail -n 1 | awk '{print $1}'}
test -z $val && val=bestvideo
exec yt-dlp -P $DLDIR -f $val+bestaudio $1$proxy
