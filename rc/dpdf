#!/bin/rc

# open pdfs in mupdf with dmenu

DIR=$HOME/usr/doc

cd $DIR

switch($1) {
case -d
	sel=`{find *.pdf -type f | awk -F "/" '{print $NF}' | dmenu -c -i -l 20 -p 'Delete:'}
	rm -rf $"sel
case *
	sel=`{find *.pdf -type f | awk -F "/" '{print $NF}' | dmenu -c -i -l 20 -p 'View:'}
	mupdf $"sel
}
